<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="retrocommander.disk_creator.DiskCreator">
   <children>
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Label fx:id="sectorLabel" contentDisplay="RIGHT" graphicTextGap="9.0" text="Sector Dimension">
               <graphic>
                  <ChoiceBox fx:id="sectorChoice" prefWidth="125.0" />
               </graphic>
            </Label>
            <Label fx:id="sptLabel" contentDisplay="RIGHT" graphicTextGap="12.0" prefHeight="24.0" prefWidth="250.0" text="Sectors per track">
               <graphic>
                  <Spinner fx:id="sptSpinner" prefWidth="80.0" />
               </graphic>
            </Label>
            <Label fx:id="tphLabel" contentDisplay="RIGHT" graphicTextGap="18.0" prefHeight="24.0" prefWidth="250.0" text="Tracks per head">
               <graphic>
                  <Spinner fx:id="tphSpinner" prefWidth="80.0" />
               </graphic>
            </Label>
            <Label fx:id="headLabel" contentDisplay="RIGHT" graphicTextGap="29.0" prefHeight="24.0" prefWidth="250.0" text="heads number">
               <graphic>
                  <Spinner fx:id="headSpinner" prefWidth="80.0" />
               </graphic>
            </Label>
            <Button mnemonicParsing="false" onAction="#createDisk" text="Create disk file" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
